<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @garden.banner_url %>);">
  <div class="container">
  <h1><%= @garden.name %></h1>
  </div>
</div>

<div class="d-flex w-100 justify-content-around flex-wrap my-3">
  <% @garden.plants.each do |plant| %>
      <div>
        <div class="card my-3" style="width: 18rem;">
          <%= image_tag plant.image_url, class: "card-img-top", style: "height: 300px; object-fit: cover" %>
          <div class="card-body d-flex justify-content-between align-items-center">
            <div>
              <p class="card-text"><%= plant.name %>
              </div>
              <div>
              <%= link_to  "Delete", plant_path(plant), method: :delete, data: { confirm: "Are you sure you wanna destroy the magic plants of this garden?"}, class: 'btn btn-danger' %>
            </div>
            </p>
            
          </div>
        </div>
    </div>
  <% end %> 
</div>


<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-4">

      <%= simple_form_for [@garden, @plant] do |f| %>
        <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :image_url %>
      </div>

      <div class="form-actions">
        <%= f.submit "add a plant", class: "btn btn-success" %>
      </div>
      <% end %>

    </div>
  </div>
</div>

<%= link_to 'Back', gardens_path %>
